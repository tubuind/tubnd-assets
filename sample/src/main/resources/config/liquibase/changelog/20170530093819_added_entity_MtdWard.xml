<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd
                        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <property name="now" value="now()" dbms="h2"/>

    <property name="now" value="sysdate" dbms="oracle"/>

    <property name="floatType" value="float4" dbms="postgresql, h2"/>
    <property name="floatType" value="float" dbms="mysql, oracle, mssql"/>

    <!--
        Added the entity MtdWard.
    -->
    <changeSet id="20170530093819-1" author="jhipster">
        <createTable tableName="mtd_ward">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="wardcode" type="varchar(10)">
                <constraints nullable="false" />
            </column>

            <column name="wardname" type="varchar(50)">
                <constraints nullable="false" />
            </column>

            <column name="wrdlatitude" type="decimal(10,2)">
                <constraints nullable="true" />
            </column>

            <column name="wrdlongitude" type="decimal(10,2)">
                <constraints nullable="true" />
            </column>

            <column name="active" type="integer">
                <constraints nullable="false" />
            </column>

            <column name="isdel" type="integer">
                <constraints nullable="false" />
            </column>

            <column name="createby" type="varchar(50)">
                <constraints nullable="true" />
            </column>

            <column name="createdate" type="date">
                <constraints nullable="true" />
            </column>

            <column name="lastmodifyby" type="varchar(50)">
                <constraints nullable="true" />
            </column>

            <column name="lastmodifydate" type="date">
                <constraints nullable="true" />
            </column>

            <column name="mtd_district_id" type="bigint">
                <constraints nullable="true" />
            </column>

            <!-- jhipster-needle-liquibase-add-column - JHipster will add columns here, do not remove-->
        </createTable>
        
    </changeSet>
</databaseChangeLog>
